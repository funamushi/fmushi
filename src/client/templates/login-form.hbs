<form id="login-form" action="/login" class="control slide col-sm-3 col-xs-10">
  <div class="form-group">
    <input class="form-control input-lg" type="text" name="username" placeholder="ユーザ名">
  </div>
  <div class="form-group">
    <input class="form-control input-lg" type="text" name="password" placeholder="好きな言葉" style="font-size:small;">
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-default">ログイン</button>
  </div>
  <div class="form-group">
    <a class="navigate" href="/register">登録する</a>
  </div>
</form>
