<div id="username-dialog" class="control" style="left:50%; top:25%;"
     data-content="「てめえ、何者だ」"
     data-placement="top"></div>
<div id="password-dialog" class="control" style="left:50%; top:25%;"
     data-content="「好きな言葉は?」"
     data-placement="top"></div>

<form id="register-form" action="/register" class="control col-md-5 col-sm-5 col-xs-10">
  <section class="username slide">
    <div class="form-group">
      <input class="form-control input-lg alphabet" type="text" id="name" placeholder="ユーザ名" required>
      <span class="help-block">半角英数字が使えます。</span>
    </div>
    <div class="form-group">
      <button id="username-ok" type="button" class="btn btn-default">OK</button>
    </div>
  </section>
  <section class="password slide">
    <div class="form-group">
      <input class="form-control input-lg valid" type="text" id="password" value="めちゃめちゃがんばって生きているっちゅうねん" style="font-size: small;" required>
      <span class="help-block">ログインするときの合言葉になります。</span>
    </div>
    <div class="form-group">
      <button id="password-ok" type="button" class="btn btn-default">OK</button>
      <br>
      <a id="password-cancel" href="#">戻る</a>
    </div>
  </section>
</form>
